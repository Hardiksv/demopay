{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "functions": {
    "api/*.py": {
      "runtime": "@vercel/python",
      "maxDuration": 10, 
      "memory": 128
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/main.py"
    }
  ],
  "ignore": [
    "venv/**",
    "__pycache__/**",
    "node_modules/**",
    "tests/**",
    "docs/**",
    ".git/**"
  ]
}
